# BGE Embedding Service (local or production)
BGE_EMBEDDING_SERVICE_URL=http://localhost:8000
# Google Cloud Text-to-Speech API Key
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_TTS_API_KEY=

# Optional: TTS Cache Configuration
TTS_CACHE_MAX_ITEMS=200
TTS_CACHE_TTL_MS=86400000
TTS_RATE_LIMIT_WINDOW_MS=60000
TTS_RATE_LIMIT_MAX=6


# LLM provider (default: groq)
BITB_LLM_PROVIDER=groq
BITB_LLM_MODEL=llama-3.3-70b-versatile
# Groq API Key for embeddings and LLM
GROQ_API_KEY=your-groq-api-key
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Redis (for distributed rate limiting in production)
# Format: redis://[username:password@]host:port[/database]
# Example: redis://default:password@redis.example.com:6379/0
# Local: redis://localhost:6379
REDIS_URL=

# Supabase Connection Pooler (Supavisor/pgBouncer)
# Use the pooler endpoint for production traffic
# Example: postgres://dbuser:dbpass@db-pooler.supabase.co:6543/postgres
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=


# Langfuse Tracing (required in production for observability)
# Get your keys from: https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# Vector DB Monitoring (Prometheus metrics)
ENABLE_VECTOR_DB_MONITORING=true

# Admin JWT Authentication
# Generate secure secrets for production (use: openssl rand -base64 32)
JWT_SECRET=dev-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
