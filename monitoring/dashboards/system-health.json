          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "options": { "1": { "text": "UP", "color": "green" } } }
            ],
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Groq API Health",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "health_check_status{job=\"bitb-chatbot\",service=\"groq\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "options": { "1": { "text": "UP", "color": "green" } } }
            ],
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "BullMQ Queue Health",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
        "targets": [
          {
            "expr": "health_check_status{job=\"bitb-chatbot\",service=\"bullmq\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "options": { "1": { "text": "UP", "color": "green" } } }
            ],
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      }
    ]
  }
}
